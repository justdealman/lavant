// Fonts

@import './mixins/fonts.styl'
webfont('Futura PT', 'futurapt-regular', normal)
webfont('Noto Sans', 'notosans-regular', normal)

// Variables

colorBlack = #000000
colorWhite = #ffffff
colorDark = #333333
colorGrey = #2e353a
colorRed = #e50046
colorBlue = #0578be
f-futura = 'Futura PT', sans-serif
f-noto = 'Noto Sans', sans-serif

// Default

html
	height 100%

	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before
	*:after
		vertical-align top
		box-sizing border-box

body
	width 100%
	height 100%
	color colorBlack
	font-size 12px
	line-height 16px
	font-family f-futura
	padding 0
	margin 0
	background #f9f9f9
	-webkit-tap-highlight-color transparent

p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse

	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color colorBlack
	text-decoration none

	&:hover
		text-decoration none

form
	margin 0

ul
	margin 0 0 10px 16px
	padding 0

	li
		padding 0
		list-style none

ol
	margin 0 0 10px 18px
	padding 0

	li
		padding 0 0 0 16px

input
select
textarea
	color colorDark
	font-size 12px
	font-family f-futura
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family f-futura
	margin 0
	border 0
	box-sizing border-box

	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #c0c0c0

:-moz-placeholder
	color #c0c0c0

::-moz-placeholder
	color #c0c0c0

:-ms-input-placeholder
	color #c0c0c0

.img-cover
.img-contain
	display none !important

.wrapper
	min-height 100%
	padding-bottom 104px

