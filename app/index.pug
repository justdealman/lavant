								.catalog__controls
									span.catalog--price.catalog--price_blue 2890 р.
									button.button.button_blue.button_basket.button_mini(data-add)
						.catalog__col
							.catalog__pic.catalog__pic_blue
								span.catalog__pic--title Shampoo
								.catalog__pic--item.catalog__pic--item_blue.scale
									img.img-cover(src='./pic/catalog-2.jpg', width='480', height='749', alt='')
